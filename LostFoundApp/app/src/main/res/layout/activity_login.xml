<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context="com.example.bantuhambamu.LoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:src="@drawable/main_top" />

    <TextView
        android:id="@+id/txtsplashh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/maisonneuebold"
        android:text="Masuk"
        android:textColor="@color/txtsplash"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="137dp"
        android:src="@drawable/login" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/maisonneuebold"
        android:hint="Username">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_user"
            android:fontFamily="@font/maisonneuebook"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/pass1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/username1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/maisonneuebold"
        android:hint="Password">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_lock"
            android:fontFamily="@font/maisonneuebook"
            android:inputType="textPassword"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@style/ButtonGeneral"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/pass1"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/maisonneuebold"
        android:text="Masuk"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/texttanya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_below="@+id/btnLogin"
        android:fontFamily="@font/maisonneuebook"
        android:gravity="center"
        android:text="Belum punya akun?"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_toRightOf="@+id/texttanya"
        android:fontFamily="@font/maisonneuedemi"
        android:gravity="center"
        android:text=" Register"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageBottom"
        android:layout_width="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_alignParentBottom="true"
        android:layout_height="115dp"
        android:src="@drawable/login_bottom" />

</RelativeLayout>