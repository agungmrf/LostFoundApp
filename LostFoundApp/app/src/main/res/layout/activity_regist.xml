<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context="com.example.bantuhambamu.RegistActivity">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="130dp"
        android:src="@drawable/signup_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/maisonneuebold"
        android:text="Registrasi"
        android:textColor="@color/txtsplash"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:src="@drawable/signup" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textUsername"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/gambar"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/maisonneuebook"
        android:hint="Username">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRegisterUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_user"
            android:fontFamily="@font/maisonneuebook"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/textUsername"
        android:layout_marginTop="4dp"
        android:id="@+id/textName"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/maisonneuebook"
        android:hint="Nama Lengkap">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRegisterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_name"
            android:fontFamily="@font/maisonneuebook"
            android:inputType="textPersonName|textCapWords"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/TextEmail"
        android:layout_below="@+id/textName"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/maisonneuebook"
        android:hint="Email">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_email"
            android:fontFamily="@font/maisonneuebook"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:id="@+id/textPass"
        android:layout_below="@id/TextEmail"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/maisonneuebook"
        android:hint="Password">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_lock"
            android:fontFamily="@font/maisonneuebook"
            android:inputType="textPassword"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        style="@style/ButtonGeneral"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textPass"
        android:layout_marginRight="25dp"
        android:textSize="16sp"
        android:fontFamily="@font/maisonneuebold"
        android:text="Register"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/texttanya2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_below="@+id/btnRegister"
        android:textAlignment="center"
        android:fontFamily="@font/maisonneuebook"
        android:text="Sudah punya akun?"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/texttanya2"
        android:layout_below="@+id/btnRegister"
        android:fontFamily="@font/maisonneuedemi"
        android:text=" Masuk"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageBottom"
        android:layout_width="280dp"
        android:layout_marginEnd="330dp"
        android:layout_alignParentBottom="true"
        android:layout_height="120dp"
        android:src="@drawable/main_bottom" />
</RelativeLayout>
